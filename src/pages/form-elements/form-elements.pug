extends ../../layout/ui-kit/ui-kit.pug
block variables
    -var pageLinks = ['mbvnb', 'ydddddd', 'uuuuuuuuuu', 'uuuuuussfsfs', 'gggggggggg', 'hhhhhhhhh', 'taagxhxgcx', 'gsfs'];

block content
    .form-elements__column
        include ../../components/text-field/text-field
        +textField(name='text field', type='text', placeholder='Email', id='text field')
        +textField(name='text field', type='text', placeholder='This is pretty awesome', id='text', class='hover')

        include ../../components/dropdown/dropdown
        +dropdown([{'id': 'adualts', 'item': 'Взрослые'}, {'id': 'children', 'item': 'Дети'},
            {'id': 'babies', 'item': 'Младенцы'}], 'Сколько гостей', {'singleItem': 'гость', 'pluralItem': 'гостя', 'pluralItem2': 'гостей'})
        include ../../components/dropdown/dropdown
        +dropdown([{'id': 'beds', 'item': 'кровати'}, {'id': 'bathrooms', 'item': 'ванные'},
            {'id': 'fridges', 'item': 'холодильники'}], 'Сколько приблуд', {'singleItem': 'приблуда', 'pluralItem': 'приблуды', 'pluralItem2': 'приблуд'})

        include ../../components/dropdown-item-count/dropdown-item-count
        +dropdownItemCount([{'id': 'beds', 'item': 'кровати', 'single': 'кровать', 'plural1': 'кровати', 'plural2': 'кроватей'},
            {'id': 'bathrooms', 'item': 'ванные', 'single': 'ванная', 'plural1': 'ванные', 'plural2': 'ванных'},
            {'id': 'fridges', 'item': 'холодильники', 'single': 'холодильник', 'plural1': 'холодильника', 'plural2': 'холодильников'}],
        'Че каво?')

        include ../../components/radio-buttons/radio-buttons
        +radio-buttons(['item1', 'item2', 'item4'], 'Name')

        include ../../components/toggle/toggle
        +toggle('Send me email', 'myId')

        include ../../components/checkbox-buttons/checkbox-buttons
        +checkboxButtons([{'name':'smoking', 'label':'Можно курить'}, {'name':'pets', 'label':'Можно с питомцами'},
            {'name':'guests', 'label':'Можно приглашать гостей'}])

        include ../../components/like-button/like-button
        i(class="material-icons") face

        include ../../components/range-slider/range-slider
        include ../../components/button/button
        +button('true', 'Click me')(type='button' disabled=false class='main-button')
        +button('true', 'Click me')(type='button' disabled=true class='secondary-button')
        +button('false', 'Click me')(class='text-link')
        +button('false', 'Click me')(disabled='true' class='text-link')
        +button('true', 'Click me')(type='button' class='big-button')

        include ../../components/pagination/pagination
        +pagination(pageLinks)

        include ../../components/rate-button/rate-button
        +rate-button(3)

        include ../../components/bullet-list/bullet-list
        +bulletList(['Нельзя с питомцами', 'Без вредных привычек', 'Приглашенные друзья должны уйти до 23:00'], 'Bullet list')

        include ../../components/list-with-icons/list-with-icons
        +listWithIcons([{'title': 'Комфорт', 'subtitle': 'Шумопоглощяющие стены', 'icon': 'insert_emoticon'},
            {'title': 'Удобство', 'subtitle': 'Окно в каждой из спален', 'icon': 'location_city'}])

        include ../../components/expandable-checkbox/expandable-checkbox
        +expCheckbox([{'name': 'smoking', 'label': 'Можно курить'}, {'name': 'pets', 'label': 'Можно с питомцами'},
            {'name': 'guests', 'label': 'Можно приглашать гостей'}], 'expandable checkbox list')

        include ../../components/rich-checkbox/rich-checkbox
        +richCheckbox([{'name':'hall', 'title': 'Широкий коридор', 'paragraph': 'Ширина коридоров в номере не менее 91 см.'},
            {'name':'disability-help', 'title': 'Помощьник для инвалидов', 'paragraph': 'На 1 этаже вас встретит специалист и проводит до номера.'}])

        include ../../components/review/review
        +review({'userName': 'Мурат Сарафанов', /*'photoPath': '', */'date': '5 дней назад',
            'text': 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})

        include ../../components/masked-text-field/masked-text-field
        include ../../components/date-dropdown/date-dropdown
        include ../../components/filter-date-dropdown/filter-date-dropdown
        +filterDate({'first': '19 авг', 'second': '23 авг'})
        include ../../components/subscription/subscription

