extends ../../layout/ui-kit/ui-kit.pug
block variables
    -var selectorOptions = ['option1', 'option2', 'option3'];

block content
    .form-elements__column
        include ../../components/text-field/text-field
        +textField(name='text field', type='text', placeholder='Email', id='text field')
        +textField(name='text field', type='text', placeholder='This is pretty awesome', id='text', class='hover')

        include ../../components/dropdown/dropdown
        +dropdown(['option1', 'option2', 'option3', 'option4'])

        include ../../components/radio-buttons/radio-buttons
        +radio-buttons(['item1', 'item2', 'item4'], 'Name')

        include ../../components/toggle/toggle
        +toggle('Send me email', 'myId')

        include ../../components/checkbox-buttons/checkbox-buttons
        +checkboxButtons(['Можно курить', 'Можно с питомцами', 'Можно приглашать гостей'])

        include ../../components/like-button/like-button
        i(class="material-icons") face

        include ../../components/range-slider/range-slider
        include ../../components/button/button
        +button('true', 'Click me')(type='button' disabled=false class='main-button')
        +button('true', 'Click me')(type='button' disabled=true class='secondary-button')
        +button('false', 'Click me')(class='text-link')
        +button('false', 'Click me')(disabled='true' class='text-link')
        +button('true', 'Click me')(type='button' class='big-button')
